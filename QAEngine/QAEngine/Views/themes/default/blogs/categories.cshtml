@inject IStringLocalizer<GeneralResource> GeneralResource
@model Jugnoon.Models.CategoryListViewModel_v2

    @{
        // activate header menu
        ViewBag.BlogsTabCss = "active";
        // setup search with articles
        ViewBag.SearchType = 6;

    }

    <partial name="~/Views/Shared/_BreadCrumb.cshtml" model="new BreadViewModel() { BreadItems = Model.BreadItems }" />


    <div class="row">
        <div class="col-md-8">

            @await Html.PartialAsync("~/Views/themes/default/blogs/partials/_CategoryList.cshtml", Model)

            <div class="m-t-10">
                @await Html.PartialAsync("~/Views/partials/ads/ad_728.cshtml", new AdsModelView() { isAdult = false })
            </div>

        </div>
        <div class="col-md-4">
            @await Html.PartialAsync("~/Views/themes/default/blogs/partials/_Nav.cshtml", new Jugnoon.Blogs.Models.BlogNavViewModel()
            {
                hideAds = false,
                hideSearch = true,
                hideArchives = true,
                hideCategories = true,
                hideTags = false,
                Path = "blogs/"
            })
        </div>
    </div>
