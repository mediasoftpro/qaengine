@model Jugnoon.qa.Models.qaListFilterViewModel
@inject IStringLocalizer<GeneralResource> GeneralResource
<div class="btn-group m-r-10">
    <button type="button" class="btn btn-secondary">@Model.selectedOrder</button>
    <button type="button" class="btn btn-secondary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span class="sr-only">Order Dropdown</span>
    </button>
    <div class="dropdown-menu">
        <a class="dropdown-item" href="@Model.order_recent_url">
            @GeneralResource["_recent"].Value
        </a>
        <a class="dropdown-item" href="@Model.order_votes_url">@GeneralResource["_most_voted"].Value</a>
        <a class="dropdown-item" href="@Model.order_featured_url">
            @GeneralResource["_featured"].Value
        </a>
        <a class="dropdown-item" href="@Model.order_resolved_url">
            @GeneralResource["_resolved"].Value</a>
            <a class="dropdown-item" href="@Model.order_closed_url">@GeneralResource["_closed"].Value</a>
    </div>
</div>
<div class="btn-group">
    <button type="button" class="btn btn-secondary">@Model.selectedFilter</button>
    <button type="button" class="btn btn-secondary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span class="sr-only">Filter Dropdown</span>
    </button>
    <div class="dropdown-menu">
        <a class="dropdown-item" href="@Model.filter_date_today_url">
            @GeneralResource["_today"].Value</a>
        <a class="dropdown-item" href="@Model.filter_date_thisweek_url">
            @GeneralResource["_this_week"].Value</a>
        <a class="dropdown-item" href="@Model.filter_date_thismonth_url">
            @GeneralResource["_this_month"].Value</a>
        <a class="dropdown-item" href="@Model.filter_date_alltime_url">@GeneralResource["_all_time"].Value</a>
</div>
</div>

